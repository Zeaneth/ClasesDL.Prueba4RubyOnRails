<h1>Tareas :)</h1>
<div class="container">
  <div class="row">
    <% @tasks.each_slice(3) do |row| %>
      <% row.each do |task| %>
        <div class="col">
          <div class="card">
            <%= image_tag task.photo, class:'card-img-top' %>
            <div class="body">
              <h5><%= task.name %></h5>
              <p><%= task.done? ? 'Realizado' : 'Pendiente' %></p>
              <a href="#" class="btn btn-<%= task.done? ? 'success' : 'dark' %>">Go link :3</a>
            </div>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top: 3rem"> </div>
    <% end %>
  </div>
</div>